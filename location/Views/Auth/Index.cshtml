
@{
    ViewBag.Title = "Connexion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-3" style="margin-left: auto; margin-right: auto;">
    @using (Html.BeginForm())
    {
        <div class="py-3">
            @ViewBag.Message
        </div>
        <div class="form-group" style="margin-left: auto; margin-right: auto;">
            <label for="email">Adresse e-mail :</label>
            <input type="email" name="email" id="email" required class="form-control" style="width:200px" />
        </div>
        <div class="form-group" style="margin-left: auto; margin-right: auto;">
            <label for="pwd">Mot de passe :</label>
            <input type="password" name="pwd" id="pwd" required class="form-control" style="width:200px" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </div>
    }
</div>

