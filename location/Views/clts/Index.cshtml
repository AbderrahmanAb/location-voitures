@model IEnumerable<location.Models.clt>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-striped" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdresseMail)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.DateNaissance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CIN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.permis)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdresseMail)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.DateNaissance)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.CIN)*@
            <img src="@item.CIN" width="120" height="120"/>
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.permis)*@
            <img src="@item.permis" width="120" height="120" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CID }, new { @class = "btn btn-outline-success" }) 
            @Html.ActionLink("Details", "Details", new { id=item.CID }, new { @class = "btn btn-outline-primary" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.CID }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
}

</table>
