@model IEnumerable<location.Models.locatvoiture>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.clt.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.voiture.numero_matriculation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.voiture.Modele.nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.clt.Nom)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.voiture.numero_matriculation)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.voiture.Modele.nom)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StartDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EndDate)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.LocationID }, new { @class = "btn btn-outline-success" }) 
        @Html.ActionLink("Details", "Details", new { id = item.LocationID }, new { @class = "btn btn-outline-primary" })
        @Html.ActionLink("Delete", "Delete", new { id = item.LocationID }, new { @class = "btn btn-outline-danger" })
    </td>
</tr>
}

</table>
